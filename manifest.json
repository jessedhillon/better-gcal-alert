{
  "manifest_version": 2,

  "name": "Better Google Calendar Alert",
  "description": "Replaces the Google Calendar popup with something less intrusive",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["https://www.google.com/calendar/*"],
    "css": ["gcal-alert.css"],
    "js": ["gcal-alert.js"]
  }],
  "web_accessible_resources": [
    "icon-bell.svg",
    "sound-notification.ogg",
    "favicon.ico"
  ],
  "permissions": [
    "activeTab"
  ]
}
